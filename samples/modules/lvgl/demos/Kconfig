choice LV_Z_DEMO
	prompt "LVGL demo to build"
	default LV_Z_DEMO_WIDGETS
	help
	  Demo application to build.

config LV_Z_DEMO_MUSIC
	bool "LVGL music demo"
	select LV_USE_DEMO_MUSIC
	help
	  Build music player demo application.

config LV_Z_DEMO_BENCHMARK
	bool "LVGL benchmark demo"
	select LV_USE_DEMO_BENCHMARK
	help
	  Build benchmarking demo application.

config LV_Z_DEMO_STRESS
	bool "LVGL stress demo"
	select LV_USE_DEMO_STRESS
	help
	  Build stress testing demo application.

config LV_Z_DEMO_WIDGETS
	bool "LVGL widgets demo"
	select LV_USE_DEMO_WIDGETS
	help
	  Build stress testing demo application.

endchoice



config LV_USE_ADXL_CUSTOM_TAB
	bool "ADXL Custom TAB"
	default n
	help
	  ADXL custom tab.

config LV_USE_RGB_CUSTOM_TAB
	bool "RGB Custom TAB"
	default n
	help
	  RGB custom tab.

config BT_DEVICE_NAME
	default "Renesas SmartBond Zephyr Demo" if LV_USE_RGB_CUSTOM_TAB
	default "Renesas Booth XX - Aisle X" if LV_USE_ADXL_CUSTOM_TAB

if LV_Z_DEMO_WIDGETS

choice LV_Z_DEMO_WIDGETS_CUSTOM_TAB
	prompt "LVGL custom window tab"
	default LV_Z_DEMO_RGB_CUSTOM_TAB
	help
	  Select the custom window to be created.

config LV_Z_DEMO_ADXL_CUSTOM_TAB
	bool "ADXL Custom Window"
	select LV_USE_ADXL_CUSTOM_TAB
	help
	  Select the ADXL custom tab.

config LV_Z_DEMO_RGB_CUSTOM_TAB
	bool "RGB Custom WIndow"
	select LV_USE_RGB_CUSTOM_TAB
	help
	  Select the RGB custom tab.

endchoice

endif # LV_Z_DEMO_WIDGETS

source "Kconfig.zephyr"
